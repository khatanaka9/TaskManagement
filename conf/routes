# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# 初期画面にプロジェクト一覧画面を表示
GET     /projectList                                ProjectController.projectList
GET     /project/{<[0-9]+>projectid}/todoList       TodoController.TodoList
GET     /create                                 ProjectController.projectCreate
POST    /create/Registration                    ProjectController.createRegistration
GET     /project/{<[0-9]+>projectid}/updateproject  ProjectController.updateProject
POST    /update                                     ProjectController.updateExec
POST    /todoCreate                                 TodoController.createRegistration


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
